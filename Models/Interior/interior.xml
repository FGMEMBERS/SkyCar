<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourvitres</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/SkyCar/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.031 </x-m>
      <y-m> -0.230 </y-m>
      <z-m> -0.494 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/SkyCar/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.194 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.378 </z-m>
    </offsets>
  </model>
  
  <!-- Canopy -->
  <animation>
    <name>IntCanopeTotale</name>
    <object-name>intvitres</object-name>
    <object-name>inttourvitres</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntCanopeTotale</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 50 </factor>
    <center>
      <x-m> -0.506 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.109 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

